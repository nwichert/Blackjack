<h3>Blackjack!</h3>

<p>Welcome to the game, <%= session[:player_name] %>!</p>

<% if @play_again %>
	<p>
		<strong>Play again?</strong>
		<a href="/game" class="btn btn-primary">Yes</a>
		<a href="/game_over" class="btn"> No</a>
	</p>
<% end %>

<div class="well">
<h4>Dealer's Cards:</h4>
	<% session[:dealer_cards].each_with_index do |card, i| %>
		<% if session[:turn] != "dealer" && i == 0 %>
			<img src="/images/cards/cover.jpg">
		<% else %>
			<%= card_image(card) %>
	<% end %>
<% end %>

	<% if @show_dealer_hit_button %>
		<p>
			<h5>Dealer has <%= calculate_total(session[:dealer_cards])%> and will hit.</h5>
			<form action='game/dealer/hit'method='post'>
				<input type='submit' class='btn btn-primary' value='Click to see dealer card &rarr;'>
			</form>
		</p>
	<% end %>
</div>

</br>

<div class="well">
<h4>Player's Cards:</h4>
	<% session[:player_cards].each do |card| %>
		<%= card_image(card) %>
	<% end %>
</div>

<p>
	<%= session[:player_name]%>, what would you like to do?
	You have <%= calculate_total(session[:player_cards]) %>

	<% if @show_hit_or_stay_buttons %>
		<form id="hit_form" action="/game/player/hit" media='post'>
			<input type="submit" class="btn btn-success" value="Hit" />
		</form>

		<form id="stay_form" action="/game/player/stay" media='post'>
			<input type="submit" class="btn btn-danger" value="Stay" />
		</form>
	<% end %>
</p>

